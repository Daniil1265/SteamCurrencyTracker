{
    "manifest_version": 3,
    "name": "Steam Currency Tracker",
    "version": "1.0",
    "description": "Steam Currency Tracker RU/KZT",
    "permissions": ["storage", "tabs", "activeTab", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "icons/icon_16.png"
    },
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "host_permissions": [
        "*://store.steampowered.com/*", "*://steamdb.info/app/*/?cc=ru", "*://steamdb.info/sub/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://store.steampowered.com/*"],
            "js": ["content.js"]
        },
        {
            "matches": ["*://steamdb.info/app/*/?cc=ru", "*://steamdb.info/sub/*"],
            "js": ["steamdb.js"]
        }
    ]
}
